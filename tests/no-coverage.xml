<phpunit bootstrap="bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">
	<filter>
		  <blacklist>
				<directory suffix=".php">./</directory>
		  </blacklist>
		  <whitelist>
				<directory suffix=".php">../src/</directory>
		  </whitelist>
	</filter>
</phpunit>